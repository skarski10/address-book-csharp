@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Add an address:</h2>

<form class="" action="" method="post">
  <input id="contact-id" type="hidden" name="contact-id" value='/contact/@Model["contact"].GetId()'>
  <label for="contact-address">Address:</label>
  <input type="text" name="contact-address" id="contact-address" class="form-control">
  <button type="submit" name="button">Add</button>
</form>
